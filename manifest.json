{
  "manifest_version": 2,
  "name": "Online definition and translation",
  "version": "0.0.1",

  "description": "Online definition and translation",
  "icons": {
    "128": "/images/dict_128.png"
  },

  "background": {
    "page": "/html/background.html"
  },

  "browser_action": {
    "default_icon": {
      "19": "images/dict_19.png",
      "38": "images/dict_38.png"
    },
    "default_popup": "/html/options.html"
  },

  "options_page": "/html/options.html",

  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "minimum_chrome_version": "8"
}
